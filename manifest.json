{
    "manifest_version": 2,
    "name": "Cats Awesome Images",
	 "short_name": "Cats Awesome Images",
    "description": "Lovely cats images, one per day, to make you smile.",
    "version": "1.2.6",
    "permissions": [
        "idle",
        "storage",
        "notifications",
        "alarms",
        "background"
    ],
	 "offline_enabled": true,
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    },
      "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Cats Awesome Images"
    },
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    }
}